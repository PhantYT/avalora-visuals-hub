# Database
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5432/avaloradb

# JWT Secret (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-make-it-long

# Server
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Email (SMTP) - настройки для отправки email с вашего сервера
SMTP_HOST=mail.your-domain.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@your-domain.com
SMTP_PASS=your-email-password

# Отправитель писем
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=Avalora Visuals
